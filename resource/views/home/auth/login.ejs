<form method="POST" class="content" action="/auth/login">
    <input type="hidden" name="_csrf" value="<%= req.csrfToken() %>">
    <div class="form-group">
        <label for="mobile">Mobile</label>
        <input type="text" id="mobile" name="mobile" class="input-style" placeholder="Mobile">
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" class="input-style" placeholder="Password">
    </div>
    <div class="form-group-checkbox">
        <label for="rememberMe">Remember Me</label>
        <input type="checkbox" id="rememberMe" name="rememberMe" class="input-style">
    </div>
    <%- include(viewPath('layouts/error-messages')) %>
    <a href="/auth/register" class="link-style">Didn't you Registered?</a>
    <button class="submit-style">Login</button>
</form>